<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ir.behmerd.weightcontrol.StatusActivity"
    android:background="@drawable/main_background"
    android:id="@+id/sa_master_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sa_scroll_view">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sa_contents_layout" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sa_body_status_image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/underweight"
                android:background="@drawable/main_analyze_image_underweight"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sa_details_layout"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_height_caption"
                    android:id="@+id/sa_height_title"
                    android:layout_alignParentTop="true"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/sa_height_title"
                    android:layout_toStartOf="@+id/sa_status_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/sa_height_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_weight"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/sa_weight_title"
                    android:layout_toStartOf="@+id/sa_status_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/sa_weight_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_weight_caption"
                    android:id="@+id/sa_weight_title"
                    android:layout_alignParentTop="false"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sa_height_title"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_status"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_status_title"
                    android:layout_toLeftOf="@+id/sa_status_title"
                    android:layout_toStartOf="@+id/sa_status_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_bmi"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_bmi_title"
                    android:layout_toLeftOf="@+id/sa_bmi_title"
                    android:layout_toStartOf="@+id/sa_bmi_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_ideal"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_ideal_title"
                    android:layout_toLeftOf="@+id/sa_ideal_title"
                    android:layout_toStartOf="@+id/sa_ideal_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_to_ideal"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_to_ideal_title"
                    android:layout_toLeftOf="@+id/sa_to_ideal_title"
                    android:layout_toStartOf="@+id/sa_to_ideal_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_normal_range"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_normal_range_title"
                    android:layout_toLeftOf="@+id/sa_normal_range_title"
                    android:layout_toStartOf="@+id/sa_normal_range_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_status_caption"
                    android:id="@+id/sa_status_title"
                    android:layout_alignParentTop="false"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sa_weight_title"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_bmi_caption"
                    android:id="@+id/sa_bmi_title"
                    android:layout_below="@+id/sa_status"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_ideal_weight_caption"
                    android:id="@+id/sa_ideal_title"
                    android:layout_below="@+id/sa_bmi"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_to_ideal_weight_caption"
                    android:id="@+id/sa_to_ideal_title"
                    android:layout_below="@+id/sa_ideal"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_normal_range_caption"
                    android:id="@+id/sa_normal_range_title"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_below="@+id/sa_to_ideal_title"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/main_analyze_difference_caption"
                    android:id="@+id/sa_difference_title"
                    android:textSize="15sp"
                    android:layout_below="@+id/sa_normal_range_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/sa_difference"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignTop="@+id/sa_difference_title"
                    android:layout_toLeftOf="@+id/sa_difference_title"
                    android:layout_toStartOf="@+id/sa_difference_title"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/sa_fece_icon"
                    android:src="@drawable/nochange"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/sa_difference_title"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
