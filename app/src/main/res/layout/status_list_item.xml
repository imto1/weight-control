<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sli_main_layout"
    android:background="@drawable/main_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sli_item_number"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sli_icon"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sli_weight_frame"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sli_item_number"
        android:layout_toStartOf="@+id/sli_item_number"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_circle"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/sli_weight"
            android:layout_gravity="center_horizontal"
            android:text="100"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sli_dir"
        android:layout_gravity="center_vertical"
        android:text="@string/special_character_down"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/sli_weight_frame"
        android:layout_toStartOf="@+id/sli_weight_frame"
        android:layout_marginRight="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sli_difference"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:text="-0.5"
        android:layout_toLeftOf="@+id/sli_dir"
        android:layout_toStartOf="@+id/sli_dir"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sli_date"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:text="0000-00-00"
        android:layout_toLeftOf="@+id/sli_difference"
        android:layout_toStartOf="@+id/sli_difference"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

</RelativeLayout>